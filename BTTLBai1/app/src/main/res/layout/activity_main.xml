<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F6200EE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSoA"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số A:"
            android:textColor="#F60808"
            android:textColorHint="#37EA0A0A"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edSoA"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSoB"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số B:"
            android:textColor="#F60808"
            android:textColorHint="#37EA0A0A"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edSoB"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XulyCong"
            android:text="+"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnTru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XulyTru"
            android:text="-"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XulyNhan"
            android:text="*"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnChia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XulyChia"
            android:text="-"
            tools:ignore="OnClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ket qua hiển thị ở đây"
        android:textSize="24sp" />

</LinearLayout>